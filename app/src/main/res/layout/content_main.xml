<?xml version="1.0" encoding="utf-8"?>
<android.support.constraint.ConstraintLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#f5fffa"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context="makemyhall.app.dcmindia.com.makemyhalln3.MainActivity"
    tools:showIn="@layout/app_bar_main">

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:scrollbars="none">



        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:orientation="vertical">

            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="200dp"
                android:layout_margin="0dp"
                android:layout_gravity="center"
                app:cardCornerRadius="2dp"
                android:elevation="10dp"
                android:background="@color/white">

                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#FFF"
                    android:focusable="false"
                    android:layout_marginBottom="-120dp"
                    android:orientation="vertical">

                    <ImageView
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:background="@drawable/offerimage"

                        />


                    <!--<FrameLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="#d3d1d1"-->
                        <!--android:id="@+id/framelayout2">-->

                    <!--</FrameLayout>-->
                </LinearLayout>

            </android.support.v7.widget.CardView>


            <android.support.v7.widget.CardView
                android:layout_width="match_parent"
                android:layout_height="170dp"
                android:layout_gravity="center"
                android:layout_marginTop="14dp"
                app:cardCornerRadius="2dp"
                android:elevation="10dp"
                android:background="@color/white">

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:background="#FFF"
                android:orientation="vertical"
                >

                <FrameLayout
                    android:layout_width="match_parent"
                    android:layout_height="match_parent"
                    android:background="#d3d1d1"
                    android:id="@+id/framelayout1">

                </FrameLayout>

            </LinearLayout>
            </android.support.v7.widget.CardView>

            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="match_parent"
                android:layout_marginTop="14dp"
                android:orientation="vertical">

                <android.support.v7.widget.CardView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    app:cardBackgroundColor="@color/white"
                    android:layout_marginBottom="4dp"
                    android:layout_marginTop="4dp">

                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="match_parent"
                        android:orientation="vertical">


                    <LinearLayout
                        android:layout_width="match_parent"
                        android:layout_height="wrap_content"
                        android:orientation="horizontal"
                        android:layout_margin="-20dp"
                        android:weightSum="2">

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:layout_height="127dp"
                            android:textColor="@color/hotelnamecolor"
                            android:text="@string/marriegehall"
                            android:gravity="center"
                            android:paddingTop="90dp"
                            android:layout_marginLeft="0dp"
                            android:id="@+id/weddingbutton"
                            android:background="@drawable/weddingxml"/>

                        <TextView
                            android:layout_width="0dp"
                            android:layout_weight="1"
                            android:textColor="@color/hotelnamecolor"
                            android:text="@string/party"
                            android:gravity="center"
                            android:layout_marginLeft="0dp"
                            android:layout_marginRight="0dp"
                            android:paddingTop="90dp"
                            android:layout_height="127dp"
                            android:id="@+id/weddingbutton2"
                            android:background="@drawable/partyxml"/>

                    </LinearLayout>




                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/hotelnamecolor"
                        android:gravity="center"
                        android:paddingTop="90dp"
                        android:layout_marginLeft="0dp"
                        android:layout_height="127dp"
                        android:text="@string/exhibition"
                        android:id="@+id/btnwedding3"
                        android:background="@drawable/exhixml" />
                    <TextView
                        android:layout_width="0dp"
                        android:layout_height="127dp"
                        android:text="@string/conferencehall"
                        android:layout_marginLeft="0dp"
                        android:layout_marginTop="0dp"
                        android:textColor="@color/hotelnamecolor"
                        android:gravity="center"
                        android:paddingTop="90dp"
                        android:id="@+id/btnwedding4"
                        android:background="@drawable/conferencexml"
                        android:layout_weight="1" />

                </LinearLayout>



                <LinearLayout
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:orientation="horizontal"
                    android:weightSum="2">

                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/hotelnamecolor"
                        android:gravity="center"
                        android:layout_marginLeft="0dp"
                        android:paddingTop="90dp"
                        android:text="@string/meetinghall"
                        android:layout_height="127dp"
                        android:id="@+id/btnweding5"
                        android:background="@drawable/meetingxml" />


                    <TextView
                        android:layout_width="0dp"
                        android:layout_weight="1"
                        android:textColor="@color/hotelnamecolor"
                        android:gravity="center"
                        android:paddingTop="90dp"
                        android:layout_marginLeft="0dp"
                        android:layout_marginRight="0dp"
                        android:text="@string/event"
                        android:layout_height="127dp"
                        android:id="@+id/btnwedding6"
                        android:background="@drawable/tradexml" />

                </LinearLayout>

            </LinearLayout>
                </android.support.v7.widget.CardView>

            </LinearLayout>


            <!--<android.support.v7.widget.CardView-->
                <!--android:layout_width="match_parent"-->
                <!--android:layout_height="180dp"-->
                <!--android:layout_gravity="center"-->
                <!--android:layout_marginTop="17dp"-->
                <!--app:cardCornerRadius="2dp"-->
                <!--android:elevation="10dp"-->
                <!--android:background="@color/white">-->

                <!--<LinearLayout-->
                    <!--android:layout_width="match_parent"-->
                    <!--android:layout_height="match_parent"-->
                    <!--android:background="#FFF"-->
                    <!--android:orientation="vertical"-->
                    <!--&gt;-->

                    <!--<FrameLayout-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_height="match_parent"-->
                        <!--android:background="#d3d1d1"-->
                        <!--android:id="@+id/framelayout3">-->

                    <!--</FrameLayout>-->

                <!--</LinearLayout>-->
            <!--</android.support.v7.widget.CardView>-->


            <LinearLayout
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginTop="10dp"
                android:orientation="vertical">

                <TextView
                    android:layout_width="match_parent"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:gravity="center"
                    android:padding="15dp"
                    android:id="@+id/allservicesitem1"
                    android:layout_marginBottom="10dp"
                    android:layout_marginLeft="15dp"
                    android:layout_marginRight="15dp"
                    android:background="@drawable/fullservicesitem"
                    android:text="@string/ViewAll51Services"/>
            </LinearLayout>



        </LinearLayout>
    </ScrollView>


</android.support.constraint.ConstraintLayout>
